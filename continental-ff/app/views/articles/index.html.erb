<h1>Fanfics</h1>

<%= link_to 'New fanfic', new_article_path %>
  <% @articles.each do |article| %>
  <div class="alert alert-light">
    <h3><%= article.title %></h3>
    <p><%= article.text %></p>
    <%= link_to 'Show', article_path(article), :class => 'btn btn-outline-primary' %>
    <%= link_to 'Edit', edit_article_path(article), :class => 'btn btn-outline-primary' %>
    <%= link_to 'Destroy', article_path(article),
            method: :delete,
            data: { confirm: 'Are you sure?' }, :class => 'btn btn-warning' %>
  </div>
  <% end %>
